#!/bin/sh

# frontend 디렉토리 변경 감지 및 E2E 테스트 자동 실행 스크립트
echo "🚀 Starting pre-push hook for E2E testing..."
echo "📅 Timestamp: $(date '+%Y-%m-%d %H:%M:%S')"
echo "📂 Current directory: $(pwd)"
echo "👤 User: $(whoami)"
echo ""

# 변경된 파일 중 frontend/ 디렉토리에 있는 파일이 있는지 확인
echo "🔍 Checking for frontend changes in push..."
CHANGED_FILES=$(git diff --name-only HEAD~1 HEAD 2>/dev/null || git diff --name-only origin/main...HEAD 2>/dev/null || echo "")
echo "📋 Changed files in push:"
echo "$CHANGED_FILES" | sed 's/^/  - /'
echo ""

FRONTEND_CHANGES=$(echo "$CHANGED_FILES" | grep "^frontend/" || true)

if [ -z "$FRONTEND_CHANGES" ]; then
  echo "✅ No frontend changes detected in push. Skipping E2E tests."
  echo "📊 Summary: No frontend files in push changes"
  exit 0
fi

echo "📁 Frontend changes detected in push:"
echo "$FRONTEND_CHANGES" | sed 's/^/  - /'
echo "📊 Frontend files count: $(echo "$FRONTEND_CHANGES" | wc -l | tr -d ' ')"
echo ""

# frontend 디렉토리 존재 확인
if [ ! -d "frontend" ]; then
  echo "❌ Error: frontend directory not found!"
  echo "📂 Current directory contents:"
  ls -la
  exit 1
fi

# frontend 디렉토리로 이동
echo "📂 Changing to frontend directory..."
cd frontend
echo "📂 Current directory: $(pwd)"

# package.json 존재 확인
if [ ! -f "package.json" ]; then
  echo "❌ Error: package.json not found in frontend directory!"
  echo "📂 Frontend directory contents:"
  ls -la
  exit 1
fi

# npm 설치 확인
echo "🔍 Checking npm installation..."
if ! command -v npm &> /dev/null; then
  echo "❌ Error: npm is not installed or not in PATH!"
  exit 1
fi
echo "✅ npm version: $(npm --version)"

# node_modules 존재 확인
if [ ! -d "node_modules" ]; then
  echo "⚠️  Warning: node_modules not found. Running npm install..."
  npm install
  if [ $? -ne 0 ]; then
    echo "❌ Error: npm install failed!"
    exit 1
  fi
  echo "✅ npm install completed successfully"
fi

# Playwright 설치 확인
echo "🔍 Checking Playwright installation..."
if ! npx playwright --version &> /dev/null; then
  echo "⚠️  Warning: Playwright not found. Installing Playwright..."
  npm install --save-dev @playwright/test
  npx playwright install --with-deps
  if [ $? -ne 0 ]; then
    echo "❌ Error: Playwright installation failed!"
    exit 1
  fi
  echo "✅ Playwright installation completed successfully"
else
  echo "✅ Playwright version: $(npx playwright --version)"
fi

echo ""
echo "🏗️  Building application for E2E tests..."
echo "📅 Build start time: $(date '+%Y-%m-%d %H:%M:%S')"
npm run build
BUILD_EXIT_CODE=$?
echo "📅 Build end time: $(date '+%Y-%m-%d %H:%M:%S')"

if [ $BUILD_EXIT_CODE -ne 0 ]; then
  echo "❌ Error: Build failed with exit code $BUILD_EXIT_CODE"
  echo "🔍 Please check the build errors above and fix them"
  exit $BUILD_EXIT_CODE
fi
echo "✅ Build completed successfully"

echo ""
echo "🎭 Running E2E tests..."
echo "📅 E2E test start time: $(date '+%Y-%m-%d %H:%M:%S')"
echo "🌐 Starting development server for E2E tests..."

# 백그라운드에서 개발 서버 시작
npm run dev &
DEV_SERVER_PID=$!

# 개발 서버가 시작될 때까지 대기
echo "⏳ Waiting for development server to start..."
sleep 5

# 서버가 실행 중인지 확인
if ! curl -s http://localhost:3000 > /dev/null; then
  echo "⚠️  Development server may not be ready yet. Waiting additional 5 seconds..."
  sleep 5
fi

# E2E 테스트 실행
echo "🧪 Running Playwright E2E tests..."
npm run test:e2e
E2E_EXIT_CODE=$?

# 개발 서버 종료
echo "🛑 Stopping development server..."
kill $DEV_SERVER_PID 2>/dev/null || true
wait $DEV_SERVER_PID 2>/dev/null || true

echo "📅 E2E test end time: $(date '+%Y-%m-%d %H:%M:%S')"

if [ $E2E_EXIT_CODE -ne 0 ]; then
  echo "❌ Error: E2E tests failed with exit code $E2E_EXIT_CODE"
  echo "🔍 Please check the E2E test failures above and fix them"
  echo "📊 E2E test report available at: frontend/playwright-report/index.html"
  exit $E2E_EXIT_CODE
fi

echo "✅ E2E tests completed successfully"

echo ""
echo "🎉 Pre-push E2E testing completed successfully!"
echo "📊 Summary:"
echo "  - Build: ✅ Passed"
echo "  - E2E Tests: ✅ Passed"
echo "📅 Total execution time: $(date '+%Y-%m-%d %H:%M:%S')"
echo "🚀 Pre-push hook completed successfully!"
